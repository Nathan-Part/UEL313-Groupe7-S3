{% extends "layout.html.twig" %}

{% block title %}Résultat(s) pour "{{ tag.title }}"{% endblock %}

{% block content %}
<div class="page-header">
    <h1>Tag : "{{ tag.title }}" <small>résultats</small></h1>
</div>

{% if links|length <= 0 %}
    <div class="alert alert-warning">
        Aucun résultat ne correspond au tag "{{ tag.title }}".
    </div>
{% else %}
    <div class="row">
        {% for link in links %}
            <div class="col-sm-6 col-md-4">
                <div class="panel panel-default link-card">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a>
                        </h3>
                    </div>

                    <div class="panel-body">
                        <p class="text-muted">{{ link.desc }}</p>
                        <p class="small text-muted">by <strong>{{ link.user.username }}</strong></p>
                    </div>

                    <div class="panel-footer clearfix">
                        <div class="pull-left tags">
                            {% for t in link.tags %}
                                <a href="{{ path('tag', { 'id': t.id }) }}" class="label label-info tag-pill">{{ t.title }}</a>
                            {% endfor %}
                        </div>

                        <a class="btn btn-primary btn-xs pull-right" href="{{ link.url }}" target="_blank" rel="noopener">
                            <span class="glyphicon glyphicon-new-window"></span> Open
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
