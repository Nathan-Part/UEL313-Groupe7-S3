{% extends "layout.html.twig" %}

{% block title %}{{ link.title }}{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{{ link.title }}</h1>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <p class="lead text-muted">{{ link.desc }}</p>
        <p class="small text-muted">by <strong>{{ link.user.username }}</strong></p>

        <div class="tags" style="margin-top: 10px;">
            {% for tag in link.tags %}
                <a href="{{ path('tag', { 'id': tag.id }) }}" class="label label-info tag-pill">{{ tag.title }}</a>
            {% endfor %}
        </div>
    </div>

    <div class="panel-footer clearfix">
        <a class="btn btn-primary btn-sm pull-right" href="{{ link.url }}" target="_blank" rel="noopener">
            <span class="glyphicon glyphicon-new-window"></span> Open
        </a>
    </div>
</div>
{% endblock %}
